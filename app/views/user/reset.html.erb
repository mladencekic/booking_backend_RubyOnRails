<!-- template for resetting password -->
<div class="row-fluid">
  <div class="span2">
    <h3>Reset Password</h3> <!-- page title -->
  </div>
  <div class="span3 offset1">
    <br/>
    <%= form_tag :action => "process_reset" do %> <!-- form for inputting username -->
      <%= text_field "user", "username", :placeholder => "Account Username" %> <!-- username of account to have password reset -->
  </div>
</div>
<div class="row-fluid">
  <div class="span3 offset3">
      <%= submit_tag "Reset", :class => "btn btn-primary" %> <!-- submit button for form -->
      <%= link_to "Cancel", :back, :class => "btn btn-info"%> <!-- cancel button -->
    <% end %>
  </div>
</div>